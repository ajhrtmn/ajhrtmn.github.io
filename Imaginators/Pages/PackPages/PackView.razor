                            {
                                @for (var c = 0; c < 3; c++ )
                                {
                                    <li id="hlst02_@(r)_@(c)" class="holster_node">
                                        <div class="node_div">
                                            <img src="/Media/Images/nodebg.png" />
                                        </div>
                                    </li>
                                }
                            }
