                    </div>
                    <div class="holster">
                        <ul class="holster_nodes">
                            @for (var r = 0; r < 6; r++ )
                            {
                                @for (var c = 0; c < 3; c++ )
                                {
                                    <li id="hlst03_@(r)_@(c)" class="holster_node">
                                        <div class="node_div">
                                            <img src="/Media/Images/nodebg.png" />
                                        </div>
                                    </li>
                                }
                            }
