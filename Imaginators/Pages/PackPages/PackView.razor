                        @for (var c = 0; c < 16; c++ )
                        {
                            <li id="pack_@(r)_@(c)" class="pack_node">
                                <div class="node_div">
                                    <img src="/Media/Images/nodebg.png" />
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
            <div class="storage_container">
                <div class="holsters">
                    <div class="holster">
                        <ul class="holster_nodes">
                            @for (var r = 0; r < 6; r++ )
                            {
