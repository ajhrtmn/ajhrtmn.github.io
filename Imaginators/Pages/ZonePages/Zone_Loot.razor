<div class="pack_wrapper">
    <div class="pack_header">Loot</div>
    <div class="pack_content_bin">
        @* <div class="items"></div> *@
        <div class="storage_wrapper">
            <div class="storage_container">
                <ul class="pack_nodes">
                    @for (var r = 0; r < 16; r++ )
                    {
                        @for (var c = 0; c < 16; c++ )
                        {
                            <li id="pack_@(r)_@(c)" class="pack_node">
                                <div class="node_div">
                                    <img src="/Media/Images/nodebg.png" />
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
            <div class="storage_container">
                <ul class="pack_nodes">
                    @for (var r = 0; r < 16; r++ )
                    {
                        @for (var c = 0; c < 16; c++ )
                        {
                            <li id="loot_@(r)_@(c)" class="pack_node">
                                <div class="node_div">
                                    <img src="/Media/Images/nodebg.png" />
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@code {

    public PlayerChar pc = new PlayerChar();

    public string locked = "";
    public bool unlocked_pack_rows = true;
    public bool unlocked_pack_cols = true;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            @* Pack_Items.Add(new Item { Width = 4, Height = 2, ID = 1 });
            Pack_Items.Add(new Item { Width = 3, Height = 3, ID = 2 });
            Armor_Items.Add(new Item { Width = 1, Height = 2, ID = 3 }); *@

            pc.Pack_Unlocked_Rows = 13;
            pc.Pack_Unlocked_Cols = 10;
        }
    }

}